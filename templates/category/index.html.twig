{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="text-right">
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-info btn-sm"><i class="far fa-eye"></i> Show</a>
                    {% if app.user is not null %}
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-primary btn-sm"><i class="far fa-edit"></i> Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user is not null %}
    <a href="{{ path('category_new') }}" class="btn btn-success"><i class="far fa-plus-square"></i> Create new</a>
    {% endif %}
{% endblock %}
